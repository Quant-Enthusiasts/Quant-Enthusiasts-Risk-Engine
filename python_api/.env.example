# Quant Enthusiasts Risk Engine - Environment Configuration
# Copy this file to .env and customize as needed

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Market Data Cache Configuration
MARKET_DATA_CACHE_PATH=./market_data_cache.db
MARKET_DATA_CACHE_HOURS=24

# Default Market Data Parameters
DEFAULT_RISK_FREE_RATE=0.045
DEFAULT_VOLATILITY=0.25
DEFAULT_DIVIDEND_YIELD=0.0

# YFinance Configuration
YFINANCE_TIMEOUT=10
YFINANCE_MAX_RETRIES=3

# VaR Calculation Defaults
DEFAULT_VAR_SIMULATIONS=100000
DEFAULT_VAR_CONFIDENCE=0.95
DEFAULT_VAR_TIME_HORIZON=1.0

# API Rate Limiting (optional)
API_RATE_LIMIT_ENABLED=False
API_MAX_REQUESTS_PER_HOUR=1000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=risk_engine.log

# CORS Configuration
CORS_ORIGINS=*

